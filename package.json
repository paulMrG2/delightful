{
  "name": "delightful",
  "description": "A little delight goes a long way",
  "version": "0.0.1",
  "homepage": "https://chrome.google.com/webstore/detail/delightful/",
  "author": "Paul Groth",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulMrG2/delightful/"
  },
  "scripts": {
    "start": "xt-build -e dev -w",
    "start:firefox": "xt-build -e dev -p firefox -w",
    "build": "xt-build -e prod",
    "watch": "xt-build -e prod -w",
    "build:firefox": "xt-build -e prod -p firefox",
    "clean": "xt-clean",
    "docs": "xt-docs",
    "test": "xt-test",
    "coverage": "nyc --reporter=lcov npm run test",
    "sync": "xt-sync"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintIgnore": [
    "test/**/*"
  ],
  "devDependencies": {
    "extension-cli": "latest"
  },
  "xtdocs": {
    "source": {
      "include": [
        "README.md",
        "src"
      ]
    }
  },
  "xtbuild": {
    "js_bundles": [
      {
        "name": "background",
        "src": "./src/browser/js/background.js"
      },
      {
        "name": "menu",
        "src": "./src/browser/js/menu.js"
      },
      {
        "name": "settings",
        "src": "./src/browser/js/settings.js"
      },
      {
        "name": "app",
        "src": "./src/content/js/**/*.js"
      }
    ],
    "locales_list": [
      "en"
    ],
    "locales_dir": "./assets/locales/",
    "scss_bundles": [
      {
        "name": "menu",
        "src": "./src/browser/scss/menu.scss"
      },
      {
        "name": "settings",
        "src": "./src/browser/scss/settings.scss"
      }
    ]
  },
  "dependencies": {
    "canvas-confetti": "^1.5.1"
  }
}
